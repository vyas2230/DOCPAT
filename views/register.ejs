<!DOCTYPE html>
<html>
    <head>
        <title>Registeration</title>
        <link rel="stylesheet" href="/css/register.css">
       
    </head>
    <body>
        <form class="my-form" action="/register" method="POST">
            <div class="container">
              <img src="/img/LOGONEW.png" alt="logo">
              <h1>Register</h1>
              <ul>
                <li>
                  <div class="grid grid-2">
                    <input name="fname" type="text" placeholder="Firstname" required>  
                    <input name="lname" type="text" placeholder="Lastname" required>
                  </div>
                </li>
                <li>
                  <div class="grid grid-2">
                    <input name="gender" type="gender" placeholder="Gender" required>
                    <input name="age" type="number" placeholder="Age" required>
                  </div>
                </li>    
                <li>
                    <div class="grid grid-2">
                        <input name="email" type="email" placeholder="Email" required>
                        <input name="pass" type="password" placeholder="Password" required>
                        
                    </div>
                </li>   
                
                <li>
                    <div class="grid grid-2">
                      <input name="city" type="text" placeholder="City" required>
                      <input name="state" type="text" placeholder="State" required>  
                    </div>
                </li>

                <li>
                  <div class="grid grid-2">
                    <input name="phn" type="text" placeholder="Phone Number" required>
                  </div>
              </li>
            
                <li>
                  <input type="checkbox" id="terms">
                  <label for="terms">I have entered correct information</label>
                </li>  
                <li>
                  <div class="grid grid-3">
                    <div class="required-msg">REQUIRED FIELDS</div>
                    <button class="btn-grid" type="submit" disabled>
                      <span class="back">
                        <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/162656/email-icon.svg" alt="">
                      </span>
                      
                      <span class="front">SUBMIT</span>
                    </button>
                    <button class="btn-grid" type="reset" disabled>
                      <span class="back">
                        <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/162656/eraser-icon.svg" alt="">
                      </span>
                      <span class="front">RESET</span>
                    </button> 
                  </div>
                </li>    
              </ul>
            </div>
          </form>

          <% if (locals.register_error) { 
            register_error.forEach(function(error_msg){ %>
            <div class="alert alert-danger" role="alert"><%= error_msg %></div>
          <% });
          } %>

          <div>
            <b><p style="font-size:24px;text-align:center;margin-top:30px;">Click Here to <a href="/" style="text-decoration: none;">Login</a></p></b>
          </div>
          
        <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js" integrity="sha256-qM7QTJSlvtPSxVRjVWNM2OfTAz/3k5ovHOKmKXuYMO4=" crossorigin="anonymous"></script>
        <script src="/js/registration.js"></script> 
    </body>
</html>